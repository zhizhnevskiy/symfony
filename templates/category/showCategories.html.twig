{% extends 'base.html.twig' %}

{% block title %}Show Category!{% endblock %}

{% block body %}
    <h3>My Categories</h3>
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('show_video_by_category', {'category_id': category.id}) }}">
                    {{ category.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}