<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome! Yuriy!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<header>
    {% block header %}
        <div class="header_logo">
            <a href="{{ path('home_page') }}">FAVOURITE VIDEO</a>
        </div>
        <nav>
            <ul>
                <li><a href="{{ path('home_page') }}">Home</a></li>
                <li><a href="{{ path('add_video') }}">Add Video</a></li>
                <li><a href="{{ path('show_videos') }}">Show Video</a></li>
                <li><a href="{{ path('add_category') }}">Add Categories</a></li>
                <li><a href="{{ path('show_category') }}">Show Categories</a></li>
            </ul>
        </nav>

        <button class="green">Sign in</button>
    {% endblock %}
</header>

<div class="center_block_main">
    <aside>
        {% block sidebar %}
            <ul>
                <li>
                    <a href="{{ path('add_video') }}">Add Video</a>
                </li>
                <li>
                    <a href="{{ path('show_videos') }}">Show Video</a>
                </li>
                <li>
                    <a href="{{ path('add_category') }}">Add Category</a>
                </li>
                <li>
                    <a href="{{ path('show_category') }}">Show Categories</a>
                </li>
            </ul>
        {% endblock %}
    </aside>
    <main>
    {% block body %}

    {% endblock %}
    </main>
</div>

<footer>
    {% block footer %}
        FOOTER @Zhizhnevskiy
    {% endblock %}
</footer>
</body>
</html>
